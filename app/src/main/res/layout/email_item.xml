<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    tools:showIn="@layout/activity_main"
    android:background="@drawable/bg_card_view"
    >

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="16dp"
    >

    <TextView
        android:id="@+id/txt_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:textSize="24sp"
        tools:text="F"
        android:textColor="@android:color/white"
        android:background="@drawable/circle"
        android:gravity="center"
        />
    <TextView
        android:id="@+id/txt_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/txt_icon"
        android:layout_alignTop="@+id/txt_icon"
        android:layout_marginStart="16dp"
        android:textSize="18sp"
        android:textColor="@color/black"
        tools:text="Facebook"
        />
    <TextView
        android:id="@+id/txt_subject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_user"
        android:layout_alignStart="@id/txt_user"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:textSize="16sp"
        tools:text="testeeeeeeeeeeeee"
        />
    <TextView
        android:id="@+id/txt_preview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_below="@id/txt_subject"
        android:layout_alignStart="@id/txt_subject"

        android:singleLine="true"
        android:ellipsize="marquee"
        android:layout_marginEnd="24dp"
        android:textSize="16sp"
        tools:text="preview preview preview preview preview"
        />
    <TextView
        android:id="@+id/txt_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:textColor="@android:color/darker_gray"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:text="03 Nov"
        />

        <ImageView
            android:id="@+id/img_star"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_star"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            />

</RelativeLayout>

</androidx.cardview.widget.CardView>